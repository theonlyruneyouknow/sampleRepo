<h1>Add Inventory</h1>
<%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <span>

                <!-- <h2>HTML Forms</h2> -->

                <form action="/inventory/add_inventory" method="post">
                    <label for="name">First Name:</label><br>
                    <input type="text" id="account_firstname" name="account_firstname" required value=""><br>

                    <label for="name">Last Name:</label><br>
                    <input type="text" id="account_lastname" name="account_lastname" required value=""><br>
                    <label for="email">Email:</label><br>
                    <input type="email" id="account_email" name="account_email" required
                        placeholder="Enter a valid email address" value=""><br>
                    <label for="email">Password:</label><br>

                    <input type="password" id="account_password" name="account_password" required
                        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{3,}$"
                        value=""><br><span>Passwords
                        must be at least 3 (for testing, 12 later) characters and contain at least 1 number, 1
                        capital letter and 1 special
                        character</span><br>

                    <button class="button">Register</button>
                    <!-- <input type="submit" value="Submit"> -->
                </form>
                <!-- <div>No Account? No Problem: <a href="/account/register">Sign Up</a></div> -->

            </span>
