                        <input type="text" id="inv_image" name="inv_image" required
                            value="<%= locals.inv_thumbnail %>"><br>
                        <label for="name">Thumbnail Path:</label><br>
                        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                            value="<%= locals.inv_thumbnail %>"><br>
                        <label for="name">Price:</label><br>
                        <input type="text" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>"><br>
                        <label for="text">Year:</label><br>
                        <input type="text" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>"><br>
                        <label for="name">Miles:</label><br>
                        <input type="text" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>"><br>
                        <label for="name">Color:</label><br>
                        <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>"><br>


                        <br>

                        <button class="button">Update Vehicle</button>
                        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                            <% } %>>

