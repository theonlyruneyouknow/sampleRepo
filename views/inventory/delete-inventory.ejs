<h1>Add Inventory</h1>
<%- messages() %>

    <%# if (errors) { %>
        <ul class="notice">
            <%# errors.array().forEach(error=> { %>
                <li>
                    <%#= error.msg %>
                </li>
                <%# }) %>
        </ul>
        <%# } %>

            <span>

                <!-- <h2>HTML Forms</h2> -->


                <form action="delete-inventory" method="post">
                    <label for="classification">Classification:</label><br>
                    <%- classificationList %>
                        <input type="hidden" id="classification_id" name="classification_id" required value="">
                        <br>

                        <label for="name">Make:</label><br>
                        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>"><br>
                        <label for="name">Model:</label><br>
                        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"><br>
                        <label for="name">Description:</label><br>
                        <input type="text" id="inv_description" name="inv_description" required
                            value="<%= locals.inv_description %>"><br>
